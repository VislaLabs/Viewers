@import "{ohif:design}/app"

.studylistToolbar
  .studyCountButton
    margin: 0 100px

  .addNewStudy
    label
      theme('color', '$textSecondaryColor')
      font-weight: 400
      cursor: pointer

      *
        pointer-events: none

      &:hover
        theme('color', '$hoverColor')

      &:active
        theme('color', '$activeColor')

    input
      width: 0.1px;
      height: 0.1px
      opacity: 0
      overflow: hidden
      position: absolute
      z-index: -1
